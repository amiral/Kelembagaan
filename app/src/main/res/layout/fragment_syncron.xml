<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kelembagaan.pdpp.kemenag.gov.kelembagaan.ui.tentang.SyncronFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <Button
            android:id="@+id/provinsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:text="Ambil Data Provinsi"
            android:background="@drawable/green_button"/>
        <Button
            android:id="@+id/kabupten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:text="Ambil Data Kabupaten"
            android:background="@drawable/green_button"/>

        <Button
            android:id="@+id/pesantren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Ambil Data Pesantren"
            android:layout_margin="5dp"
            android:background="@drawable/green_button"/>
        <Button
            android:id="@+id/lembaga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:text="Ambil Data Lembaga"
            android:background="@drawable/green_button"/>
    </LinearLayout>

</RelativeLayout>
